{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["plugin:sonarjs/recommended"],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": ["sonarjs"],
    "globals": {
        "BigInt": true
    },
    "rules": {
        "sonarjs/cognitive-complexity": ["error", 15],
        "indent": ["error", 4],
        "operator-linebreak": [2, "before"]
    }
}
