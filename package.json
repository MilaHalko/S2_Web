    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npx eslint **/*.js --no-error-on-unmatched-pattern --ignore-path .gitignore",
    "lint:fix": "npx eslint **/*.js --fix --ignore-path .gitignore",
    "stylelint": "npx stylelint **/*.css --ignore-path .gitignore",
    "stylelint:fix": "npx stylelint **/*.css --fix --ignore-path .gitignore",
    "format": "npx prettier --check .",
    "format:fix": "npx prettier --write .",
    "prepare": "npx husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MilaHalko/webApps.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MilaHalko/webApps/issues"
  },
  "lint-staged": {
    "*.{js,ts,html}": [
      "prettier --check ."
    ],
    "*.{js,ts}": [
      "eslint **/*.js"
    ],
    "*.css": [
      "stylelint **/*.css"
    ],
    "*.js": "eslint --cache --fix"
  },
  "homepage": "https://github.com/MilaHalko/webApps#readme",
  "devDependencies": {
    "@nodeart/eslint-plugin": "^1.3.0",
